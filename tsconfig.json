{
  "compilerOptions": {
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/router.ts", "src/prisma.ts", "src/server.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
